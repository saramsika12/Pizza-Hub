@model PizzaHub.Repositories.Models.CartModel

@{
	ViewData["Title"] = "Cart | Pizza Hub";
}

<section>
	@if (Model != null && Model.Items.Count > 0)
	{
		<div class="row mt-3">
			<div class="col-lg-8">
				<div class="card mb-3">
					<div class="col-sm-12">
						<h5 class="mt-3">Cart (@Model.Items.Count Items)</h5>
					</div>
					<hr />
					<div class="card-body pt-0 pb-0">
						@foreach (var item in Model.Items)
						{
							<div class="row">
								<div class="col-md-5 col-lg-3 col-x1-3">
									<div class="rounded mb-3 mb-md-0">
										<img class="rounded w-100"
										src="@item.ImageUrl" alt="Sample">
									</div>
								</div>
								<div class="col-md-7 col-lg-9 col-x1-9">
									<div class="d-flex justify-content-between">
										<div>
											<h5>@item.Name</h5>
											<p class="mb-2 text-muted small">Size: Regular</p>
											<p class="mb-2 text-muted small">
												Unit Price: Rs @item.UnitPrice.ToString("N2")
												<span class="p1-1">
													<a class="btn btn-danger" href="javascript:void(0)" onclick="deleteItem
                             ('@item.Id')" title="Remove"><i class="bi bi-trash"></i></a>
												</span>
											</p>
										</div>
										<div>
											<div class="def-number-input number-input safari_only mb-0
                                    w-100">
											<div class="input-group mb-3">
												<div class="input-group-prepend">
													<button onclick="updateQuantity('@item.Id',-1)"
													class="btn btn-outline-secondary" type="button">-</button>
												</div>
												<input class="form-control sm-control" size="2"
												min="0" name="quantity" value="@item.Quantity" readonly />
												<div class="input-group-append">
													<button onclick="updateQuantity('@item.Id',1)"
													class="btn btn-outline-secondary" type="button">+</button>
												</div>
											</div>
										</div>
										<span id="spanTotal" class="form-text text-muted text-center">
											Total: Rs @((item.UnitPrice * item.Quantity).ToString
											("N2"))
										</span>
									</div> 
								</div>
							</div>
						</div>
							@if (Model.Items.IndexOf(item) < Model.Items.Count - 1)
							{
								<hr class="mb-4">
							}
						}
					</div>
				</div>
				<div class="mb-3">
					<a href="/" class="btn btn-outline-primary">Continue Shopping</a>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="card mb-3">
					<div class="col-sm-12">
						<h5 class="mt-3">Order Summary</h5>
					</div>
					<hr />
					<div class="card-body pt-0">
						<ul class="list-group list-group-flush">
							<li class="list-group-item d-flex justify-content-between align-items-center
                           border-0 px-0">
					           Amount
								<span> Rs @Model.Total.ToString("N2")</span>
					   </li>
							<li class="list-group-item d-flex justify-content-between align-items-center
                           border-0 px-0">
					              Tax (5%)
								<span> + Rs @Model.Tax.ToString("N2")</span>
					   </li>
							<li class="list-group-item d-flex justify-content-between align-items-center
                            px-0 mb-3">
						        <strong>Total Amount</strong>
								<span><strong> Rs @Model.GrandTotal.ToString("N2")</strong></span>
						</li>
						</ul>
						@if (@* CurrentUser != null *@ User.Identity.IsAuthenticated)
						{
							<a asp-action="CheckOut" asp-controller="Cart" class="btn btn-success btn-
                          block">CheckOut</a>
						}
						else
						{
							<a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-
                           block" asp-route-returnurl="/Cart/Index">CheckOut</a>
						}

					</div>
				</div>
			</div>
		</div>
	}
	else
	{
		<div class="row">
			<div class="col-sm-12 mt-5">
				<p style="min-height:300px">
					Your cart is empty. Please add some items from the menu.! <br><br>
					<a href="/" class="btn btn-primary">Browse Menu</a>
				</p>
			</div>
		</div>
	}
</section>

